{
  "name": "monorepo-deployment",
  "private": true,
  "scripts": {
    "build": "turbo run build ",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate" : "cd packages/db && npx prisma migrate dev && npx prisma generate && cd ../..",
    "start:http-server" : "cd apps/http-server && npm run dev",
    "start:wsserver" : "cd apps/ws-server && npm run dev",
    "start:web" : "cd apps/web && npm run start "
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.0",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
